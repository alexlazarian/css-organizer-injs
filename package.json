{
	"name": "css-organizer",
	"displayName": "css-organizer",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:css-organizer.alphabetically",
		"onCommand:css-organizer.systematically"

	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [{
				"command": "css-organizer.alphabetically",
				"title": "CSS Properties Alphabetically"
			}
			,
			{
				"command": "css-organizer.systematically",
				"title": "CSS Properties Systematically"
			}
		],



		"menus": {		
			"editor/context": [
			  {
				"when": "resourceLangId == css ",
				"submenu": "css-organizer.organize",
				"group": "1_modification"
			  }

			],
			"css-organizer.organize":[
				{
					"when": "resourceLangId == css ",
					"command": "css-organizer.alphabetically"
				  },
				  {
					"when": "resourceLangId == css ",
					"command": "css-organizer.systematically"
				  }
			]
		  },
		  "submenus": [
			{
			  "id": "css-organizer.organize",
			  "label": "Organize CSS"
			}
		  ],

		"configuration": {
			"title": "CSS Organizer",
			"properties": {
				"organizeOption": {
					"type": "string",
					"default": "default",
					"enum": ["default", "user"],
					"enumDescriptions": [
						"Use the built-in default organize pattern",
						"Use the user defined organize pattern"
					],
					"description": "How organization of CSS properties is done"
				},
				"systematic.addGroupingComments": {
					"type": "boolean",
					"default": false,
					"description": "Insert comments indicating each group in the CSS"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"@vscode/test-electron": "^2.0.3"
	},
	"dependencies": {
		"css": "^3.0.0"
	}
}